  dashboardConfig        Json             @default("{}")
  featureFlags           Json             @default("{}")
  customCss              String?
  isActive               Boolean          @default(true)
  createdAt              DateTime         @default(now())
  updatedAt              DateTime         @updatedAt

  // Relations
  brokerageClient        BrokerageClient  @relation(fields: [brokerageClientId], references: [id], onDelete: Cascade)

  @@map("white_label_configs")
}

model CustomerHealthScore {
  id                     String           @id @default(cuid())
  brokerageClientId      String
  overallScore           Int
  adoptionScore          Int
  engagementScore        Int
  supportScore           Int
  billingScore           Int
  riskLevel              String           @default("LOW")
  factors                Json             @default("{}")
  recommendations        Json             @default("[]")
  calculatedAt           DateTime         @default(now())
  nextReviewAt           DateTime?

  // Relations
  brokerageClient        BrokerageClient  @relation(fields: [brokerageClientId], references: [id], onDelete: Cascade)

  @@map("customer_health_scores")
}

model AutomatedWorkflow {
  id                     String               @id @default(cuid())
  name                   String
  description            String?
  triggerType            String
  triggerConditions      Json                 @default("{}")
  actions                Json                 @default("[]")
  isActive               Boolean              @default(true)
  lastTriggeredAt        DateTime?
  executionCount         Int                  @default(0)
  successCount           Int                  @default(0)
  errorCount             Int                  @default(0)
  createdAt              DateTime             @default(now())
  updatedAt              DateTime             @updatedAt

