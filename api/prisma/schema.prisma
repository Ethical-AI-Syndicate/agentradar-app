  createdAt              DateTime         @default(now())
  updatedAt              DateTime         @updatedAt

  // Relations
  brokerageClient        BrokerageClient  @relation(fields: [brokerageClientId], references: [id], onDelete: Cascade)

  @@map("onboarding_steps")
}

model CustomerSuccessMetric {
  id                     String           @id @default(cuid())
  brokerageClientId      String
  metricType             String
  metricName             String
  value                  Decimal
  unit                   String?
  period                 String
  recordedAt             DateTime         @default(now())
  metadata               Json             @default("{}")

  // Relations
  brokerageClient        BrokerageClient  @relation(fields: [brokerageClientId], references: [id], onDelete: Cascade)

  @@map("customer_success_metrics")
}

model CustomerSupportTicket {
