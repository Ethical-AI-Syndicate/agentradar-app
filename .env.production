# ===================================================================
# AgentRadar Production Environment Configuration - Phase 6
# CRITICAL: Secure production settings with enterprise-grade security
# ===================================================================

# Environment
NODE_ENV=production
ENVIRONMENT=production

# Server Configuration  
PORT=4000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://agentradar_prod:${DB_PASSWORD}@${DB_HOST}:5432/agentradar_production
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:6379/0
REDIS_CLUSTER=true
REDIS_MAX_CONNECTIONS=50

# JWT Configuration
JWT_SECRET=${JWT_SECRET_PROD}
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=agentradar-api-prod
JWT_AUDIENCE=agentradar-web-prod

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGINS=${CORS_ORIGINS_PROD}
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Email Configuration (SendGrid)
SENDGRID_API_KEY=${SENDGRID_API_KEY_PROD}
EMAIL_FROM="AgentRadar <noreply@agentradar.app>"
EMAIL_SUPPORT="support@agentradar.app"

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true
HEALTH_CHECK_INTERVAL=30000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/uploads/agentradar

# Performance
ENABLE_GZIP=true
ENABLE_ETAG=true
STATIC_MAX_AGE=31536000

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_ALERTS=true
ENABLE_PREDICTIVE_INSIGHTS=true

# MCP Configuration
MCP_SERVER_PORT=3001
ENABLE_MOCK_DATA=false
MCP_TIMEOUT=30000

# Court Filing Integration
COURT_API_ENDPOINT=${COURT_API_ENDPOINT_PROD}
COURT_API_KEY=${COURT_API_KEY_PROD}
COURT_POLLING_INTERVAL=3600000

# Real Estate Data Sources
MLS_API_ENDPOINT=${MLS_API_ENDPOINT_PROD}
MLS_API_KEY=${MLS_API_KEY_PROD}
PROPERTY_DATA_REFRESH_INTERVAL=7200000

# Notification Services
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID_PROD}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN_PROD}
TWILIO_FROM_NUMBER=${TWILIO_FROM_NUMBER_PROD}

# AWS Configuration
AWS_REGION=${AWS_REGION}
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID_PROD}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY_PROD}
AWS_S3_BUCKET=${AWS_S3_BUCKET_PROD}

# Error Tracking
SENTRY_DSN=${SENTRY_DSN_PROD}
SENTRY_ENVIRONMENT=production

# Analytics
GOOGLE_ANALYTICS_ID=G-LHSTSYPHZ2
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-LHSTSYPHZ2
MIXPANEL_TOKEN=${MIXPANEL_TOKEN_PROD}

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/agentradar.crt
SSL_KEY_PATH=/etc/ssl/private/agentradar.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# Load Balancer Health Check
HEALTH_CHECK_PATH=/health
READINESS_CHECK_PATH=/ready

# Graceful Shutdown
SHUTDOWN_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Resource Limits
MAX_MEMORY_USAGE=2048
MAX_CPU_USAGE=80
MAX_CONCURRENT_CONNECTIONS=1000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=${BACKUP_S3_BUCKET_PROD}

# Multi-Region Configuration
PRIMARY_REGION=us-east-1
SECONDARY_REGION=us-west-2
ENABLE_MULTI_REGION=true

# Enterprise Features
ENABLE_WHITE_LABEL=true
ENABLE_SSO_INTEGRATION=true
ENABLE_AUDIT_LOGGING=true
ENABLE_COMPLIANCE_MODE=true

# Performance Monitoring
ENABLE_APM=true
APM_SERVICE_NAME=agentradar-api-prod
APM_SERVICE_VERSION=${APP_VERSION}
APM_ENVIRONMENT=production

# Cache Configuration
ENABLE_REDIS_CACHE=true
CACHE_TTL_DEFAULT=3600
CACHE_TTL_ALERTS=300
CACHE_TTL_USER_PREFERENCES=1800

# Queue Configuration
QUEUE_REDIS_URL=${REDIS_URL}
QUEUE_CONCURRENCY=10
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000